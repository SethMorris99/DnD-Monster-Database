@page
@model D_D_Monster_Database_Web.Pages.Monsters.BrowseMonstersModel
@{
    ViewData["Title"] = "Browse Monsters";
}

<h1 class="text-center mb-4">@ViewData["Title"]</h1>
<div class="text-end mb-3">
    <a class="btn btn-success" asp-page="/Monsters/AddMonster">
        <i class="bi bi-plus-circle me-1"></i> Add Monster
    </a>
</div>


<div class="container">
    @foreach (var monster in Model.Monsters)
    {
        <div class="card my-3 p-3">
            <div class="row g-2">
                <div class="col-md-2 d-flex align-items-center justify-content-center">
                    @if (!string.IsNullOrEmpty(monster.ImageURL))
                    {
                        <img src="@monster.ImageURL" alt="Monster Image" class="img-fluid rounded" style="max-height: 100px;" />
                    }
                    else
                    {
                        <div class="text-muted">No Image</div>
                    }
                </div>
                <div class="col-md-10">
                    <h5>@monster.MonsterName</h5>
                    <p class="mb-1">@monster.Description</p>
                    <a class="btn btn-outline-primary btn-sm" asp-page="/Monsters/ViewMonster" asp-route-id="@monster.MonsterID"><i class="bi bi-eye me-1"></i>View Details</a>
                </div>
            </div>
        </div>
    }
</div>
