@page
@model D_D_Monster_Database_Web.Pages.SourceBooks.SourceBookListModel
@{
}

<div class="row mb-4">
	<div class="col-12 text-end">
		<a asp-page="AddSourceBook" class="btn btn-success btn-lg shadow-sm">+ Add Source Book</a>
	</div>
</div>
<form method="post">
<table class="table table-striped">
	<thead>
		<tr>
			<th>Title</th>
			<th>Edition</th>
			<th>Year Published</th>
			<th>Page Number</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var sourceBook in Model.SourceBookList)
		{
			<tr>
				<td>@sourceBook.Title</td>
				<td>@sourceBook.Edition</td>
				<td>@sourceBook.YearPublished</td>
				<td>@sourceBook.PageNumber</td>
				<td><a asp-page="./EditSourceBook" asp-route-id="@sourceBook.SourceBookID" class="btn btn-primary">Edit</a></td>
				<td><button onclick="return confirm('Are you sure?')" class="btn btn-danger" asp-route-id="@sourceBook.SourceBookID" asp-page-handler="Delete">Delete</button></td>
				</tr>
		}
	</tbody>
</table>
</form>