    <div class="container text-center">
        <div class="row justify-content-start">
            @foreach (var monster in Model.MonsterPosters)
            {
                <div class="col-4 mb-4">
                    <a asp-page="ViewMonster" asp-route-id="@monster.MonsterId">
                        <img src="@monster.ImageURL" title="@monster.MonsterName" class="monster-image form-control shadow-sm" />
                    </a>
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <h3 class="mt-5 text-success">Register Account</h3>
            <p>Sign up to start contributing to the database!</p>
            <a href="/Account/Registration" class="btn btn-primary mt-3"> <i class="bi bi-person-plus-fill"></i> Register</a>
        </div>
        <div class="col-sm-4">
            <h3 class="mt-5 text-success">Sign In</h3>
            <p>Returning user? Log in here.</p>
            <a href="/Account/Sign_In" class="btn btn-success mt-3"><i class="bi bi-box-arrow-in-right"></i> Sign In</a>
        </div>
        <div class="col-sm-4">
            <h3 class="mt-5 text-success">Browse Monsters</h3>
            <p>Start exploring the database!</p>
            <a href="/Monsters/BrowseMonsters" class="btn btn-warning mt-3"> <i class="bi bi-binoculars-fill"></i> Browse</a>
        </div>
    </div>

    

