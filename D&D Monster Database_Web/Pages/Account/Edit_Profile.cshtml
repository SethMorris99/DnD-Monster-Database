@page
@model D_D_Monster_Database_Web.Pages.Account.Edit_ProfileModel
@{
    ViewData["Title"] = "Edit Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - D&D Monster Database</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand text-dark" href="/">D&D Monster Database</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/Account/Profile"> <i class="bi bi-person-square"></i> Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/Account/Sign_Out"> <i class="bi bi-box-arrow-in-left"></i> Sign Out</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <div class="card">
            <div class="card-header text-center">
                <h2>Edit Profile</h2>
            </div>
            <div class="card-body">
                <form method="post">
                    <!-- Profile Image URL -->
                    <div class="mb-3">
                        <label asp-for="UserProfile.ProfileImageURL" class="form-label">Profile Image URL:</label>
                        <input asp-for="UserProfile.ProfileImageURL" class="form-control" />
                    </div>

                    <!-- First Name -->
                    <div class="mb-3">
                        <label asp-for="UserProfile.FirstName" class="form-label">First Name:</label>
                        <input asp-for="UserProfile.FirstName" class="form-control" />
                    </div>

                    <!-- Last Name -->
                    <div class="mb-3">
                        <label asp-for="UserProfile.LastName" class="form-label">Last Name:</label>
                        <input asp-for="UserProfile.LastName" class="form-control" />
                    </div>

                    <!-- Username -->
                    <div class="mb-3">
                        <label asp-for="UserProfile.Username" class="form-label">Username:</label>
                        <input asp-for="UserProfile.Username" class="form-control" />
                    </div>

                    <!-- Email -->
                    <div class="mb-3">
                        <label asp-for="UserProfile.Email" class="form-label">Email Address:</label>
                        <input asp-for="UserProfile.Email" class="form-control" />
                    </div>

                    <div class="row my-4">
                        <div class="col-md-6 mb-2">
                            <button type="submit" class="form-control btn btn-success"> <i class="bi bi-save"></i> Save Changes</button>
                        </div>
                        <div class="col-md-6 mb-2">
                            <a href="/Account/Profile" class="form-control btn btn-secondary">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <footer class="bg-light py-3 mt-4">
        <div class="container text-center">
            <p>&copy; 2025 D&D Monster Database</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
